{
  "extends": ["@releaseband/eslint-config-typescript"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "overrides": [
    {
      "files": "**/__tests__/**/*.spec.ts",
      "extends": [
        "plugin:jest/recommended",
        "plugin:jest/style",
        "plugin:jest-formatting/recommended"
      ],
      "rules": {
        "jest/no-deprecated-functions": "off"
      }
    }
  ]
}
